<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/loading_screen" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/loading_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ad break" android:layout_centerInParent="true"/>
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/ad_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Please Wait.. Showing Ad" android:layout_below="@+id/loading_text" android:layout_centerHorizontal="true"/>
        <ProgressBar android:id="@+id/progressBar2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:layout_above="@+id/loading_text" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyle"/>
    </RelativeLayout>
</RelativeLayout>