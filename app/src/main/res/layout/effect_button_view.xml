<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/outer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp">
    <RelativeLayout android:id="@+id/ad_hover" android:background="#666666" android:visibility="gone" android:layout_width="96dp" android:layout_height="96dp">
        <TextView android:textSize="11sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:background="#ffa500" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ad"/>
        <TextView android:textSize="25dp" android:textStyle="normal|bold|italic" android:textColor="@color/colorWhite" android:id="@+id/ad_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="--" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/effect_preview" android:layout_width="72dp" android:layout_height="72dp" android:scaleType="fitCenter" android:adjustViewBounds="true"/>
    <RelativeLayout android:id="@+id/select_indicator" android:background="#45484a" android:layout_width="72dp" android:layout_height="5dp" android:layout_marginTop="7dp" android:layout_below="@+id/effect_preview" android:layout_centerHorizontal="true"/>
</RelativeLayout>