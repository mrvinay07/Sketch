<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/privacy_button" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/privacy_policy_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="16dp" android:tint="#666666" android:layout_centerVertical="true" app:srcCompat="@drawable/baseline_lock_24"/>
        <TextView android:textSize="14sp" android:typeface="normal" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="@string/privacy_policy" android:layout_toRightOf="@+id/privacy_policy_icon" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/contact_button" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/contact_item" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="16dp" android:tint="#666666" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_email_black_24dp"/>
        <TextView android:textSize="14sp" android:typeface="normal" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="@string/contact" android:layout_toRightOf="@+id/contact_item" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/credits" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="16dp" android:src="@drawable/coin_icon" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:typeface="normal" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="Credits" android:layout_toRightOf="@+id/credits" android:layout_centerVertical="true"/>
        <TextView android:textColor="#ffffff" android:gravity="center" android:id="@+id/credit_amount" android:background="@drawable/credit_text_drawable" android:padding="5dp" android:layout_width="80dp" android:layout_height="35dp" android:layout_marginRight="8dp" android:text="30" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>