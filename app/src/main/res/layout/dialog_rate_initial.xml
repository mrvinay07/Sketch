        <TextView android:textSize="@dimen/text_size_medium" android:textColor="@color/rate_prompt_button_text_color" android:gravity="center_horizontal" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Rate" android:layout_weight="1"/>
    </LinearLayout>
