<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/native_banner_ad_layout" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="55dp">
    <com.facebook.ads.AdIconView android:id="@+id/native_icon_view" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginLeft="2dp" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/ad_lalbel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
        <RelativeLayout android:id="@+id/ad_choices_container" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_toLeftOf="@+id/native_ad_call_to_action" android:layout_toRightOf="@+id/native_icon_view" android:layout_centerVertical="true">
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/native_ad_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1"/>
        <TextView android:textSize="12sp" android:ellipsize="end" android:id="@+id/native_ad_social_context" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1"/>
    </LinearLayout>
    <Button android:textSize="10sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/native_ad_call_to_action" android:background="#4286f4" android:layout_width="100dp" android:layout_height="30dp" android:text="Press button to installer" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>