<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#4d333745" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_centerInParent="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <RelativeLayout android:id="@+id/ad_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.facebook.ads.NativeAdLayout
                android:id="@+id/native_ad_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <RelativeLayout android:id="@+id/banner_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <com.mopub.mobileads.MoPubView android:id="@+id/adview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ad_close_button" android:background="@color/ctacolor" android:visibility="invisible" android:layout_width="28dp" android:layout_height="28dp" android:layout_margin="3dp" android:layout_alignParentRight="true">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="1dp" android:tint="#ffffff" app:srcCompat="@drawable/ic_close_black_24dp"/>
    </RelativeLayout>
</RelativeLayout>