<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout" android:background="#556270" android:layout_width="match_parent" android:layout_height="50dp">
    <ImageView android:id="@+id/icon_image" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/view_icon" android:adjustViewBounds="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/button_rate" android:layout_toRightOf="@+id/icon_image">
        <TextView android:textSize="13dp" android:textColor="#ffffff" android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/review_text" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/button_rate" android:background="@color/ctacolor" android:layout_width="75dp" android:layout_height="55dp" android:layout_alignParentRight="true">
        <TextView android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/rate_button_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/rate" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>