<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/colorDarkBlue"/>
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/colorDarkBlue"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="@android:color/transparent"/>
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>&gt;
</selector>